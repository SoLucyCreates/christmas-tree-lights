{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "commonjs",
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "declaration": true,
    "rootDirs": ["src"],
    "sourceMap": true
  },
  "include": ["src/editor/library.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
